---
import ThemeToggle from '../components/ThemeToggle.astro';
import HeadMeta from '../components/HeadMeta.astro';
import { CountryDropdown } from '../components/CountryDropdown';
import countriesData from '../assets/data/countries.json';
import type { CountryMeta } from '../lib/types';

interface Props {
  title: string;
  description?: string;
  canonicalPath?: string;
  ogType?: 'website' | 'article';
  ogImage?: string;
  noindex?: boolean;
}

const { title, description, canonicalPath, ogType, ogImage, noindex } = Astro.props;
const countries = countriesData.countries as CountryMeta[];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <HeadMeta
      title={title}
      description={description}
      canonicalPath={canonicalPath}
      ogType={ogType}
      ogImage={ogImage}
      noindex={noindex}
    />

    <!-- Theme initialization - must be inline and blocking to prevent FOUC -->
    <script is:inline>
      (function() {
        const THEME_KEY = 'hmd-theme';
        const stored = localStorage.getItem(THEME_KEY);
        const theme = stored || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <header class="header">
      <div class="container">
        <a href="/"><h1>Birth Heatmaps</h1></a>
        <div class="header-right">
          <nav>
            <a href="/">Countries</a>
            <CountryDropdown
              client:load
              countries={countries}
              metric="fertility"
              variant="header"
            />
            <a href="/about">About</a>
          </nav>
          <ThemeToggle />
        </div>
      </div>
    </header>

    <main class="main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <p>
          Data sources:
          <a href="https://www.mortality.org/" target="_blank" rel="noopener">Human Mortality Database</a>,
          <a href="https://population.un.org/wpp/" target="_blank" rel="noopener">UN Population Division</a>
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  .header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }
</style>
