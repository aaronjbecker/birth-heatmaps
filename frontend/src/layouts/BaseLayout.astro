---
import ThemeToggle from '../components/ThemeToggle.astro';
import HeadMeta from '../components/HeadMeta.astro';
import Logo from '../components/Logo.astro';
import CountryDropdown from '../components/svelte/CountryDropdown.svelte';
import countriesData from '../assets/data/countries.json';
import type { CountryMeta } from '../lib/types';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  canonicalPath?: string;
  ogType?: 'website' | 'article';
  ogImage?: string;
  noindex?: boolean;
}

const { title, description, canonicalPath, ogType, ogImage, noindex } = Astro.props;
const countries = countriesData.countries as CountryMeta[];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <HeadMeta
      title={title}
      description={description}
      canonicalPath={canonicalPath}
      ogType={ogType}
      ogImage={ogImage}
      noindex={noindex}
    />

    <!-- Theme initialization - must be inline and blocking to prevent FOUC -->
    <script is:inline>
      (function() {
        const THEME_KEY = 'hmd-theme';
        const stored = localStorage.getItem(THEME_KEY);
        const theme = stored || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    {
      import.meta.env.PROD && !import.meta.env.PUBLIC_TESTING && (
      <script is:inline defer src="https://stats.nameplay.org/fetch.js" data-website-id="97a3fa6d-f78d-466f-8275-d9fb6688ca06"></script>
      )
    }
  </head>
  <body class="min-h-screen flex flex-col bg-bg text-text">
    <header class="h-header border-b border-border bg-bg-alt">
      <div class="max-w-container mx-auto px-md h-full flex justify-between items-center w-full">
        <a href="/"><h1 class="text-2xl font-semibold">Birth Heatmaps</h1></a>
        <div class="flex items-center gap-lg">
          <nav class="flex items-center gap-md">
            <a href="/" class="text-primary hover:underline">Countries</a>
            <CountryDropdown
              client:load
              countries={countries}
              metric="fertility"
              variant="header"
            />
            <a href="/compare" class="text-primary hover:underline">Compare</a>
            <a href="/about" class="text-primary hover:underline">About</a>
          </nav>
          <ThemeToggle />
        </div>
      </div>
    </header>

    <main class="flex-1 py-xl">
      <div class="max-w-container mx-auto px-md">
        <slot />
      </div>
    </main>

    <footer class="border-t border-border bg-bg-alt py-xl mt-auto">
      <div class="max-w-container mx-auto px-md">
        <div class="flex flex-col gap-sm text-sm text-text-muted text-center">
          <p>
            Data sources:
            <a href="https://www.mortality.org/" target="_blank" rel="noopener" class="text-primary hover:underline">Human Mortality Database</a>,
            <a href="https://population.un.org/wpp/" target="_blank" rel="noopener" class="text-primary hover:underline">UN Population Division</a>
          </p>
          <p>
            <a href="https://aaronjbecker.com" target="_blank" rel="noopener" class="inline-flex items-center gap-xs text-text hover:text-primary transition-colors">
              <Logo size={20} />
              <span>Aaron J Becker</span>
            </a>
          </p>
          <p>
            &copy; {new Date().getFullYear()} Aaron J Becker. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
