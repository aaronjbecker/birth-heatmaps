---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Interactive visualization of birth seasonality patterns' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | HMD Births Heatmaps</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <a href="/"><h1>HMD Births Heatmaps</h1></a>
        <nav>
          <a href="/">Countries</a>
          <a href="/about">About</a>
        </nav>
      </div>
    </header>

    <main class="main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <p>
          Data sources:
          <a href="https://www.mortality.org/" target="_blank" rel="noopener">Human Mortality Database</a>,
          <a href="https://population.un.org/wpp/" target="_blank" rel="noopener">UN Population Division</a>
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
