---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="-0.3 -0.3 16.6 16.6"
  aria-hidden="true"
  focusable="false"
  width={size}
  height={size}
  class={className}
>
  <style>
    /* Logo responds to theme color because it shows alongside page content. */
    /* Default/light theme */
    :root[data-theme="light"] .logo-top-path,
    :root .logo-top-path { fill: url(#logoTopGradient) }
    :root[data-theme="light"] .logo-middle-path,
    :root .logo-middle-path { fill: url(#logoMiddleGradient) }
    :root[data-theme="light"] .logo-bottom-path,
    :root .logo-bottom-path { fill: url(#logoBottomGradient) }

    /* Dark theme */
    :root[data-theme="dark"] .logo-top-path { fill: url(#logoTopGradientDark) }
    :root[data-theme="dark"] .logo-middle-path { fill: url(#logoMiddleGradientDark) }
    :root[data-theme="dark"] .logo-bottom-path { fill: url(#logoBottomGradientDark) }
  </style>
  <!-- Define the gradients -->
  <defs>
    <!-- Light mode gradients -->
    <linearGradient id="logoTopGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#000000"/>
      <stop offset="100%" style="stop-color:#111111"/>
    </linearGradient>
    <linearGradient id="logoMiddleGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#222222"/>
      <stop offset="100%" style="stop-color:#444444"/>
    </linearGradient>
    <linearGradient id="logoBottomGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#666666"/>
      <stop offset="100%" style="stop-color:#EEEEEE"/>
    </linearGradient>
    <!-- Dark mode gradients -->
    <linearGradient id="logoTopGradientDark" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFFFF"/>
      <stop offset="100%" style="stop-color:#EEEEEE"/>
    </linearGradient>
    <linearGradient id="logoMiddleGradientDark" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#DDDDDD"/>
      <stop offset="100%" style="stop-color:#BBBBBB"/>
    </linearGradient>
    <linearGradient id="logoBottomGradientDark" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#999999"/>
      <stop offset="100%" style="stop-color:#111111"/>
    </linearGradient>
  </defs>
  <!-- Top triangle -->
  <path class="logo-top-path" d="M10.29 5L8 1L5.71 5z"
        stroke="currentColor"
        stroke-width="0.4" />
  <!-- Middle section -->
  <path class="logo-middle-path" d="M13.14 10l-2.28-4H5.14l-2.28 4z"
        stroke="currentColor"
        stroke-width="0.4" />
  <!-- Base -->
  <path class="logo-bottom-path"
        stroke="currentColor"
        stroke-width="0.4"
        d="M2.29 11L0 15h16l-2.29-4z"/>
</svg>
