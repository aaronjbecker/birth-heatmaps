---
// Theme toggle component - vanilla JS with no props needed
---

<button
  id="theme-toggle"
  aria-label="Toggle theme"
  class="relative flex items-center justify-center w-10 h-10 p-2 border border-border rounded-md bg-bg-alt text-text cursor-pointer transition-all duration-200 hover:bg-bg hover:border-primary active:scale-95 dark:border-border dark:bg-bg-alt dark:text-text"
>
  <!-- Sun icon (visible in dark mode) -->
  <svg class="sun-icon absolute opacity-0 -rotate-90 scale-75 transition-all duration-300" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5"/>
    <line x1="12" y1="1" x2="12" y2="3"/>
    <line x1="12" y1="21" x2="12" y2="23"/>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
    <line x1="1" y1="12" x2="3" y2="12"/>
    <line x1="21" y1="12" x2="23" y2="12"/>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
  </svg>

  <!-- Moon icon (visible in light mode) -->
  <svg class="moon-icon absolute opacity-100 rotate-0 scale-100 transition-all duration-300" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
  </svg>
</button>

<script>
  const THEME_KEY = 'hmd-theme';
  const themeToggle = document.getElementById('theme-toggle');

  function getSystemTheme(): 'light' | 'dark' {
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  }

  function getInitialTheme(): 'light' | 'dark' {
    const stored = localStorage.getItem(THEME_KEY);
    if (stored === 'light' || stored === 'dark') {
      return stored;
    }
    return getSystemTheme();
  }

  function applyTheme(theme: 'light' | 'dark') {
    document.documentElement.setAttribute('data-theme', theme);
    updateToggleIcon(theme);
  }

  function updateToggleIcon(theme: 'light' | 'dark') {
    const sunIcon = themeToggle?.querySelector('.sun-icon');
    const moonIcon = themeToggle?.querySelector('.moon-icon');

    if (theme === 'dark') {
      // Show sun icon in dark mode
      sunIcon?.classList.remove('opacity-0', '-rotate-90', 'scale-75');
      sunIcon?.classList.add('opacity-100', 'rotate-0', 'scale-100');
      moonIcon?.classList.remove('opacity-100', 'rotate-0', 'scale-100');
      moonIcon?.classList.add('opacity-0', '-rotate-90', 'scale-75');
    } else {
      // Show moon icon in light mode
      sunIcon?.classList.remove('opacity-100', 'rotate-0', 'scale-100');
      sunIcon?.classList.add('opacity-0', '-rotate-90', 'scale-75');
      moonIcon?.classList.remove('opacity-0', '-rotate-90', 'scale-75');
      moonIcon?.classList.add('opacity-100', 'rotate-0', 'scale-100');
    }
  }

  function toggleTheme() {
    const current = document.documentElement.getAttribute('data-theme') || 'light';
    const next = current === 'light' ? 'dark' : 'light';
    applyTheme(next);
    localStorage.setItem(THEME_KEY, next);
  }

  // Initialize on page load
  const initialTheme = getInitialTheme();
  applyTheme(initialTheme);

  // Set up toggle button
  themeToggle?.addEventListener('click', toggleTheme);

  // Listen for system theme changes
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
    // Only respond if user hasn't set a manual preference
    if (!localStorage.getItem(THEME_KEY)) {
      applyTheme(e.matches ? 'dark' : 'light');
    }
  });
</script>
